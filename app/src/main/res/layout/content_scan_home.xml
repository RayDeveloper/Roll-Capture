<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.uwi.sta.idrollcapture.MainActivity"
    tools:showIn="@layout/activity_scan_home">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/StartCamera"
        android:layout_marginLeft="57dp"
        android:layout_marginStart="57dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/camera"
        android:layout_marginTop="84dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/Register"
        android:layout_alignTop="@+id/StartCamera"
        android:layout_toRightOf="@+id/StartCamera"
        android:layout_toEndOf="@+id/StartCamera"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/schedule" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/Export"
        android:layout_marginTop="84dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/export"
        android:layout_below="@+id/StartCamera"
        android:layout_alignLeft="@+id/StartCamera"
        android:layout_alignStart="@+id/StartCamera" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/coursename_txtview"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/coursecode_txtview"
        android:textSize="18dp"
        android:layout_below="@+id/coursename_txtview"
        android:layout_alignLeft="@+id/coursename_txtview"
        android:layout_alignStart="@+id/coursename_txtview" />

</RelativeLayout>
