<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.uwi.sta.idrollcapture.Setup"
    tools:showIn="@layout/activity_setup">


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView6"
        android:src="@drawable/pluss"
        android:layout_marginTop="49dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/create_new_course_setup"
        android:id="@+id/textView8"
        android:textColor="#5d5757"
        android:singleLine="true"
        android:layout_alignBottom="@+id/imageView6"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/button_ok_setup"
        android:id="@+id/btn_save"
        android:layout_marginTop="47dp"
        android:clickable="true"
        android:background="#e3e4e3"
        android:textColor="@android:color/black"
        android:layout_below="@+id/code_editText"
        android:layout_centerHorizontal="true" />
        <!--android:background="@android:color/darker_gray"-->




    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_editText"
        android:hint="@string/course_name_hint"
        android:capitalize="none"
        android:layout_marginTop="89dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:maxLength="70"
        android:layout_alignLeft="@+id/imageView6"
        android:layout_alignStart="@+id/imageView6" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/code_editText"
        android:hint="@string/course_code_hint"
        android:layout_below="@+id/name_editText"
        android:layout_alignLeft="@+id/name_editText"
        android:layout_alignStart="@+id/name_editText"
        android:layout_marginTop="43dp"
        android:maxLength="10"
        android:capitalize="characters"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
