<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.uwi.sta.idrollcapture">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/business"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CourseList"
            android:label="@string/title_activity_course_list"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Setup"
            android:label="@string/title_activity_setup"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditCourse"
            android:label="@string/title_activity_edit_course"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SelectDate"
            android:label="@string/title_activity_select_date"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".scan_home"
            android:label="@string/app_name"
            android:parentActivityName=".CourseList"
            android:theme="@style/AppTheme.NoActionBar">
            <!--<meta-data-->
                <!--android:name="android.support.PARENT_ACTIVITY"-->
                <!--android:value="edu.uwi.sta.idrollcapture.CourseList" />-->
        </activity>
        <activity
            android:name=".ContinuousCaptureActivity"
            android:label="@string/app_name"
            android:parentActivityName=".scan_home"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.uwi.sta.idrollcapture.scan_home" />
        </activity>
        <activity
            android:name=".Register"
            android:label="@string/title_activity_register"
            android:parentActivityName=".scan_home"
            android:theme="@style/AppTheme.NoActionBar">
            <!--<meta-data-->
                <!--android:name="android.support.PARENT_ACTIVITY"-->
                <!--android:value="edu.uwi.sta.idrollcapture.scan_home" />-->
        </activity>
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".CreateNewCourse"
            android:label="@string/title_activity_create_new_course"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
